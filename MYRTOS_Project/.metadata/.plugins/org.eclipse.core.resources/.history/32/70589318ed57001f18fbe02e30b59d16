}

void MemManage_Handler()
{
	while(1);
}

void PendSV_Handler()
{

}
__attribute ((naked)) void SVC_Handler()
{
	__asm ("tst lr, #4 \n\t"
			"ITE EQ \n\t"
			"mrseq r0,MSP \n\t"
			"mrsne r0,PSP \n\t"
			"B OS_SVC");
}


void HW_Init()
{
	//initialize Clock Tree (RCC -> Systick Timer & CPU) 8 MHZ
		// 8 MHZ
		// 1 count -> 0.125 us
		// X count -> 1 ms
		// X = 8000 Count
}

